
// Helper classes for app

// Class for screen reader content only

.sr-only
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0,0,0,0);
  white-space: nowrap;
  border: 0;


.hidden
  display: none !important

.show-block
  display: block !important

.show-flex
  display: flex !important

.fast-fadein
  animation: fadeIn .3s ease-in forwards

.fast-fadeout
  animation: fadeOut .3s ease-in forwards
