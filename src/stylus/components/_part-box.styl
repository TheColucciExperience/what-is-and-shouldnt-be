
// Styles for the part box component

.part-box
  position: fixed
  z-index: 50
  top: 10vh
  left: 10vw
  display: none
  flex-flow: column nowrap
  align-items: flex-start;
  max-width: 80vw
  padding: 1rem
  color: whiteColor
  background-color: rgba(0,0,0,.8)
  box-shadow: 1px 2px 1px rgba(0,0,0,.3)
  transition-duration: .3s
  &--active
    display: flex
  @media (min-width: 576px)
    max-width: 60vw
    @media (min-width: 768px)
      max-width: 50vw
      &:hover
        box-shadow: 3px 4px 2px rgba(0,0,0,.2)
      @media (min-width: 992px)
        max-width: 40vw
        @media (min-width: 1200px)
          max-width: 32vw
  &__title
    margin-bottom: 1rem
    font: 2rem titleFont
  &__text
    margin-bottom: 1rem
    font: 1rem textFont
    line-height: 1.6rem
    letter-spacing: .1rem
