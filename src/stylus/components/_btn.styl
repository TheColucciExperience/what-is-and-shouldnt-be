
/**
  * Styles for the button component. These are styles for general buttons
  * used throughout the whole application.
  */

.btn
  // Base button styles
  display: inline-block;
  border-style: solid
  border-width: .1rem
  font: 1rem titleFont
  text-transform: uppercase
  transition-duration: .4s
  cursor: pointer;
  // Buttons variations
  &--default
    padding: .8rem 1.8rem
  &--small
    padding: .6rem 1.2rem
  &--outline
    background-color: transparent
    &-white
      color: whiteColor
      border-color: whiteColor
      @media (min-width: 768px)
        &:hover
          color: blackColor
          background-color: whiteColor
  // Button placement on flex boxes
  &--align-end
    align-self: flex-end;
  // Styles for the button icon
  &-icon
    position: relative
    top: .15rem
    display: inline-block
    margin-left: .6rem
    font-size: 1.5rem
